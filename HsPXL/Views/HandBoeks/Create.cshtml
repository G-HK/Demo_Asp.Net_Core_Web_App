@model HsPXL.ViewModel.HandboekCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>HandBoek</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KostPrijs" class="control-label"></label>
                <input asp-for="KostPrijs" type="number" min="0.00" max="10000.00" step="0.01" class="form-control" />
                <span asp-validation-for="KostPrijs" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UitgiftDatum" class="control-label"></label>
                <input asp-for="UitgiftDatum" type="date" class="form-control" />
                <span asp-validation-for="UitgiftDatum" class="text-danger"></span>
            </div>
            <!--
            <div class="form-group">
                <label asp-for="Afbeelding" class="control-label"></label>
                <input asp-for="Afbeelding" class="form-control" />
                <span asp-validation-for="Afbeelding" class="text-danger"></span>
            </div>
             -->
            <div>
                <label asp-for="Afbeelding" class="control-label"></label>

                <div class="custom-file">
                    <input asp-for="Afbeelding" class="form-control custom-file-input" />
                    <label class="custom-file-label">Choose File...</label>
                </div>

                <div class="form-group m-3">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(fileName);
            });
        })
    </script>
}
