@model LoginModel
@{ Layout = null; }
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        #LoginHeader {
            justify-content: center;
            text-align: center;
            font-size:33px;
        }
    </style>
</head>
<body>
    <div class="row justify-content-center">
        <div class="col-md-4 align-content-center">
            <div id="LoginHeader">
                <img src="~/images/PxlLogo.png" />
                <p>Login</p>
            </div>
            <a class="float-right" asp-action="Register" asp-controller="Account">Register User</a>
            <div class="text-danger" asp-validation-summary="All"></div>
            <form asp-action="Login" asp-controller="Account" method="post">
                <div class="form-group">
                    <label asp-for="UserName"></label>
                    <div asp-validation-for="Name" class="text-danger"></div>
                    <input asp-for="UserName" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <div asp-validation-for="Email" class="text-danger"></div>
                    <input asp-for="Email" type="email" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <div asp-validation-for="Password" class="text-danger"></div>
                    <input asp-for="Password" type="password" class="form-control" />
                </div>
                <div class="row align-items-center justify-content-center m-2">
                    <button class="btn btn-primary m-3" type="submit" asp-action="Index" asp-controller="Home">Cancel</button>
                    <button class="btn btn-primary m-3" type="submit">Log In</button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>